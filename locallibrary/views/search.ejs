<main>

    <h1><%= title %></h1>
    <p>Search query: <%= searchQuery %></p>
    <br>

    <div>
        <h3>Books</h3>
        <% if(books.length === 0) { %>
            <p>No books found</p>
        <% } %>

        <% books.forEach((book) => { %>
            <div>
                <h4><a href="<%= book.url %>"><%= book.title %></a></h4>
                <p><%= book.summary %></p>
            </div>
        <% }); %>
    </div>

    <div>
        <h3>Authors</h3>
        <% if(authors.length === 0) { %>
            <p>No authors found</p>
        <% } %>

        <% authors.forEach((author) => { %>
            <div class="author-search">
                <% if(author.image_url){ %>
                <img src="<%= author.image_url %>" alt="<%= author.name %>">
                <% } %>
                <h4><a href="<%= author.url %>"><%= author.name %></a></h4>
                <p><%= author.lifespan %></p>
            </div>
        <% }); %>
    </div>


    <div>
        <h3>Genres</h3>
        <% if(genres.length === 0) { %>
            <p>No genres found</p>
        <% } %>
        <ul>
            <% genres.forEach((genre) => { %>
                <li><a href="<%= genre.url %>"><%= genre.name %></a></li>
            <% }); %>
        </ul>
    </div>
    

</main>